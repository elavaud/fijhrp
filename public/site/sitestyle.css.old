/**
 * Common HTML elements
 */

body {
	background-color: #d6d5bb;
	background-image: url(images/body.gif);
	background-repeat: repeat-y;
	font-family: verdana, helvetica, sans-serif;
	color: black;
	font-size: 11px;
	min-width: 900px;
}

p {
	text-align: justify;
}


a:link {
		color: #0066B3;
}

a:active {
		color: #0066B3;
}

a:visited {
		color: #0066B3;
}

a:hover {
	color: #039;
	background-color: transparent;
}

/*HEADER*/
#header {
	background-image: url(images/banner2.png);
	background-repeat: no-repeat;
	background-color: transparent;
	width: 950px;
	height: 90px;
}

#headerTitle {
	display: none;
}

/*BODY*/
#body {
	min-width: 900px;
	width: 950px;
	position: relative;
	min-height: 600px;
}

#main {
	position: relative;
	margin-top: -6px;
	margin-left: 0px;
	width: 75%;
}

#main h2 {
	color: black;
	font-size: 16px;
	font-weight: bold;
	font-family: verdana, helvetica, sans-serif;
	margin-left: 160px;
}

#main input.button {
	font-family: helvetica, sans-serif;
	background-color: #3e4748;
	border: 1px solid #3e4748;
	color:white;
}

#breadcrumb {
	font-size: 11px;
	font-style: italic;
	font-weight: lighter;
	margin-left: 160px;
	margin-top: 30px;
}

/*CONTENT*/
#content, #privacyStatement {
	font-size: 11px;
	margin-left: 160px;
	border-top: 0px solid #000;
}

#content h3 {
	color: #C60;
	font-size: 12px;
	font-weight: bold;
	font-family: verdana, helvetica, sans-serif;
}

#content h4 {
	color:  #C60;;
	font-size: 12px;
	font-weight: bold;
	font-family: verdana, helvetica, sans-serif;
}

/*PAGETITLE*/
#pageTitle { 
	background-color: #FFFBCC;
	height: 30px;
	position: absolute;
	margin-left: 132px;
	padding-left: 5px; 
	width: 79.9%; 
	border-bottom: 1px solid #96B4B6; 
}

#sidebar input.button {
	font-family: helvetica, sans-serif;
	color: white;
	background-color: #3e4748;
 	border: #3e4748 1px solid;

}

/*LEFTSIDEBAR*/
#navbar {
	border-bottom: 0px;
	font-size: 14px;
}

#navbar {
	background-image: url(images/nav_top.gif);
	background-position: top left;
	background-repeat: no-repeat;
	width: 149px;
	float: left;
	margin-top: 32px; 
	text-transform: capitalize;
	font-size: 16px;
}

#navbar ul {
	background-image: url(images/nav_bottom.gif);
	background-position: left bottom;
	background-repeat: no-repeat;
	margin: 0px;
	padding: 0px 0px 25px 0px;
	list-style: none;
}

#navbar ul li a {
	font-weight: bold;
	text-decoration: none;
	padding: 6px 10px;
	display: block;
	color: #3d3642;
    background-color: #c6d4e6;
    border-left:9px solid #78afe8;
    border-right:1px solid #3366FF;
    border-top:1px solid white;
  
}


#navbar ul li a:hover, 
#navbar ul li a.secondary:hover, 
#navbar ul li a.secondary_parent_selected:hover, 
#navbar ul li a.tertiary:hover, 
#navbar ul li a.tertiary_parent_selected:hover   {
	background-color: #FFFBCC;
    border-left:9px solid #E39716;
}

#navbar ul.menu {
	margin-top: 30px;
}

#navbar ul.menu li {
	display: block;
	width: 149px;
}


/*RIGHTSIDEBAR*/


#rightSidebar{
	background-color: #fffbcc;;
	width: 140px;
	float: right;
	margin-top: 60px;
	margin-right: 65px;
}

#rightSidebar div.block {
	background-image: url(hr.gif);
	background-position: top center;
	background-repeat: no-repeat;
	padding: 25px 8px 10px;
	font-size: 11px;
	margin-bottom: 5px;
	margin: 0px 5px 0px 5px;
	color: #0066B3;
}

#rightSidebar #query {
	font-family: verdana, helvetica, sans-serif;
	font-size: 11px;
	border: 1px solid gray;
}

#rightSidebar select.selectMenu{
	font-family: verdana, helvetica, sans-serif;
	font-size: 11px;
	border: 1px solid gray;
}

#rightSidebar div.block span.blockTitle {
	font-weight: bold;
}

#rightSidebar div.block  a{
	color: #0066B3;
}

#rightSidebar div.block a:hover {
	color: #039;
}

#rightSidebar div.block span.blockSubtitle {
	color: #0066B3;
}

/*FOOTER*/
#footer {
	width: 950px;
	height: 100px; 
	background-image: url(images/footer.gif); 
	background-position: top left;
	background-repeat: no-repeat;
	background-color: transparent;
	text-align: center;
	font-size: 10px;
	margin-left: -1px;
	margin-top: -1px;
}

/*FORMS*/
.input, select, textarea, button {
	font-family: verdana, helvetica, sans-serif;
	border: 1px solid gray;
}

input.textField, select.selectMenu, textarea.textArea, input.uploadField, input.button {
	font-family: verdana, helvetica, sans-serif;
	font-size: 12px;
	border-top: gray 1px solid;
	border-left: gray 1px solid;
	border-bottom: gray 1px solid;
	border-right: gray 1px solid;
	background-color: white;
}

/*TABLES*/
table.data, table.listing, table.info {
	font-size: 11px;
	width: 100%;
}

table.data td.label{
	height: 30px;
	vertical-align:middle;
	font: 11px;
}

table.data td.value{
	height: 30px;
	vertical-align:middle;
	padding-top: 5px;
	font: 11px;

}

ul.tagit {
	width: 90%;	
}







